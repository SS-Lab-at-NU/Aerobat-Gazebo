  </link>

  <!-- Flap Joint -->
  <joint name="flap_joint" type="revolute">
    <parent link="bat_link"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit effort="10" velocity="5.0" lower="-1.5" upper="1.5"/>
    <dynamics damping="0.1"/>
  </joint>
  <!-- Bat Plugin -->
  <gazebo>
    <plugin name="flapping_plugin" filename="libflapping_plugin.so">
      <joint_name>flap_joint</joint_name>
      <frequency>3.0</frequency>
      <amplitude>0.1</amplitude>
      <z_amplitude>0.05</z_amplitude>
      <z_frequency>1.0</z_frequency>  
    </plugin>
  </gazebo>

